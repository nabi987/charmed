
<div class="container">
  <div class="back-link">
    <%= link_to "Back to Necklaces", necklaces_path %>
  </div>

  <div class="necklace-info-cards">
    <%= cl_image_tag @necklace.photo.key, class:"d-block w-100", alt:"Necklace" %>

    <div class="necklace-info-card">
      <h2><%= @necklace.name %></h2>
      <h6>Gemstone: <%= @necklace.gemstone.capitalize %></h6>
      <h6>Material: <%= @necklace.material.capitalize %></h6>
      <p><%= @necklace.description %></p>

      <%= simple_form_for [@necklace, @rental], data: {controller: "datepicker"} do |f| %>
      <h5>Daily rental rate: £</h5><span data-datepicker-target="price"><%= @necklace.price %></span>
        <%= f.input :start_date, as: :string, input_html:{data: {datepicker_target: "startDate"}} %>
        <%= f.input :end_date, as: :string, input_html:{data: {datepicker_target: "endDate", action: "change->datepicker#calculatePrice"}} %>
        <div>
          Days selected: <span id="days-selected" data-datepicker-target="totalDays">0</span>
        </div>
        <div>
          Total price: <span id="total-price" data-datepicker-target="totalPrice">£0</span>
        </div>
        <%= f.submit %>
      <% end %>

    </div>

  </div>

      <div class="btn btn-light" id="form-toggle-btn">
        <%= "Rent now" %>
      </div>

      <div class="listing-form" id="toggle-form">
        <h3>Delivery Address</h3>
        <div class="form-row">
          <div class="input-row mt-2">
            <label for="fname"><i class="fa fa-user"></i> Full Name</label>
            <input type="text" id="fname" name="firstname" placeholder="Jane Doe">
          </div>
          <div class="input-row mt-2">
            <label for="email"><i class="fa fa-envelope"></i> Email</label>
            <input type="text" id="email" name="email" placeholder="jane@gmail.com">
          </div>
        </div>
        <div class="form-row">
        <div class="input-row mt-2">
          <label for="adr"><i class="fa-regular fa-address-book"></i> Address</label>
          <input type="text" id="adr" name="address" placeholder="138 Kingsland Rd">
        </div>
        </div>
        <div class="input-row mt-2">
          <label for="city"><i class="fa fa-institution"></i> City</label>
          <input type="text" id="city" name="city" placeholder="London">
        </div>
        <div class="input-row mt-2">
          <label for="postcode">Post Code</label>
          <input type="text" id="postcode" name="postcode" placeholder="E2 8DY">
        </div>

      <hr>
      <h3>Payment</h3>
        <div class="form-row">
          <div class="input-row mt-2">
            <label for="cname"><i class="fa fa-user"></i> Name on Card</label>
            <input type="text" id="cname" name="cardname" placeholder="Jane Doe">
          </div>
          <div class="input-row mt-2">
            <label for="ccnum">Credit Card Number</label>
            <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444">
          </div>
        </div>
        <div class="form-row">
          <div class="input-row mt-2">
            <label for="expmonth">Exp Month</label>
            <input type="text" id="expmonth" name="expmonth" placeholder="September">
          </div>
          <div class="input-row mt-2">
            <label for="expyear">Exp Year</label>
            <input type="text" id="expyear" name="expyear" placeholder="2028">
          </div>
          <div class="input-row mt-2">
            <label for="cvv">CVV</label>
            <input type="text" id="cvv" name="cvv" placeholder="352">
          </div>
        </div>
        <hr>
        <div class="button-container">
          <h3 class= "btn btn-secondary btn-sm">Submit</h3>
        </div>
      </div>

      <div class="order-confirm-box">
        <h4>Thank you for your order</h4>
        <h5>It will be with you shortly </h5>
      </div>

    </div>
  </div>
</div>
